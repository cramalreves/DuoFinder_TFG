<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:paddingTop="150dp">

        <EditText
        android:id="@+id/usernameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
            android:textColor="#06EDD6"
            android:textSize="15sp"
        android:textColorHint="#60FFFFFF"
        android:fontFamily="@font/mark_medium"
        android:background="@drawable/myedittext"
            android:paddingLeft="8dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/passwordET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="@string/password"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:textColor="#06EDD6"
            android:textColorHint="#60FFFFFF"
            android:fontFamily="@font/mark_medium"
            android:background="@drawable/myedittext"
            android:paddingLeft="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="2dp"
            />

        <CheckBox
            android:id="@+id/keepCBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"
            android:shadowColor="#CF2323"
            android:text="@string/KLI"
            android:textColor="#FFFFFF"
            android:paddingBottom="3dp"
            android:textColorHint="#60FFFFFF"
            android:fontFamily="@font/mark_medium"
/>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingBottom="2dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/mark_black"
        android:onClick="launchHomeActivity"
        android:text="@string/login"
        android:textColor="#ffe3e3e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/signinText"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/mark_medium"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/signin"
            android:textColor="#06EDD6"
            android:paddingLeft="5dp"
            android:fontFamily="@font/mark_medium"
            android:onClick="launchNewUserActivity"/>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_max"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:foregroundGravity="fill_horizontal|bottom"
        android:layout_marginTop="50dp"
        android:textSize="12sp"
        android:fontFamily="@font/mark_medium"
        android:text="@string/copyright"
        android:textColor="#2FFFFFFF" />
</LinearLayout>

