<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".NewGameUserActivity"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/summoner_nameET"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/summoner_name"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:background="@drawable/myedittext"
        android:paddingLeft="8dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/mark_medium"
        android:textColor="@color/colorAccent"
        android:textColorHint="#60FFFFFF"/>

    <TextView
        android:id="@+id/serverTV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/server"
        android:paddingLeft="8dp"
        android:paddingBottom="4dp"
        android:fontFamily="@font/mark_medium"
        android:textColor="#60FFFFFF"
        android:textColorHint="#60FFFFFF"/>

    <Spinner
        android:id="@+id/serverSP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/myedittext"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/eloTV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/elo"
        android:paddingLeft="8dp"
        android:paddingBottom="4dp"
        android:fontFamily="@font/mark_medium"
        android:textColor="#60FFFFFF"
        android:textColorHint="#60FFFFFF"/>

    <Spinner
        android:id="@+id/eloSP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/myedittext"
        />

    <TextView
        android:id="@+id/roleTV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/role"
        android:paddingLeft="8dp"
        android:paddingBottom="4dp"
        android:fontFamily="@font/mark_medium"
        android:textColor="#60FFFFFF"
        android:textColorHint="#60FFFFFF"/>

    <Spinner
        android:id="@+id/roleSP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/myedittext"
        />

        <TextView
            android:id="@+id/main1TV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mark_medium"
            android:paddingLeft="8dp"
            android:paddingBottom="4dp"
            android:text="@string/main1"
            android:textColor="#60FFFFFF"
            android:textColorHint="#60FFFFFF" />

    <Spinner
        android:id="@+id/champ1SP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/myedittext"
        />

    <TextView
            android:id="@+id/main2TV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mark_medium"
            android:paddingLeft="8dp"
            android:paddingBottom="4dp"
            android:text="@string/main2"
            android:textColor="#60FFFFFF"
            android:textColorHint="#60FFFFFF"
        />

    <Spinner
        android:id="@+id/champ2SP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/myedittext"
        />

    <TextView
            android:id="@+id/main3TV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mark_medium"
            android:paddingLeft="8dp"
            android:paddingBottom="4dp"
            android:text="@string/main3"
            android:textColor="#60FFFFFF"
            android:textColorHint="#60FFFFFF" />

    <Spinner
        android:id="@+id/champ3SP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/myedittext"
        />

    <Button
        android:id="@+id/validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickRegister"
        android:text="@string/signin"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/mark_black"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"/>

</LinearLayout>