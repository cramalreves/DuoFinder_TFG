<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:Android="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    android:layout_marginTop="100dp">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_color"
        android:paddingTop="40dp">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitStart"
            android:src="@drawable/icon1"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Stellaa37"
                android:fontFamily="@font/mark_black"
                android:textColor="#ffe3e3e3" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/adc"
                android:layout_gravity="center"
                android:paddingLeft="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="EUW"
            android:paddingBottom="10dp"
            android:alpha = ".5"
            android:fontFamily="@font/mark_medium"
            android:textColor="#ffe3e3e3"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="#FFBF00"
            android:orientation="horizontal"
            android:alpha = ".2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#8c000000"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    card_view:srcCompat="@drawable/challenger" />

                <TextView
                    android:id="@+id/txtElo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Challenger"
                    android:alpha = ".5"
                    android:fontFamily="@font/mark_black"
                    android:textColor="#ffe3e3e3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    card_view:srcCompat="@drawable/akali" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    card_view:srcCompat="@drawable/ahri" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="3dp"
                    card_view:srcCompat="@drawable/aatrox" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
